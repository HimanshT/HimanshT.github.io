<% layout('layouts/boilerplate') %>
    <h1>All campgrounds</h1>
    <% for(let campground of campgrounds){%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= campground.image %> " alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <p class="card-text">
                                <%= campground.title %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= campground.location %>
                                </small>
                            </p>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>

                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View Campground</a>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
        <%} %>