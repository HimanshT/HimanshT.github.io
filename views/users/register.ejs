<% layout('layouts/boilerplate') %>
    <h1 class="h1">Register</h1>
    <form action="/register" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" placeholder="Enter the Username" name="username"
                required>
            <div class="valid-feedback">
                looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" id="email" placeholder="Enter email" name="email" required>
            <div class="valid-feedback">
                looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">password</label>
            <input class="form-control" type="password" id="password" placeholder="Enter password" name="password"
                required>
            <div class="valid-feedback">
                looks good!
            </div>
        </div>
        <button class="btn btn-success mt-2">Register</button>
    </form>